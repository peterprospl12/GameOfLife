<UserControl x:Class="GameOfLife.WPF.Views.BoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="OnLoaded"
             Unloaded="OnUnloaded"
             PreviewMouseWheel="OnMouseWheel">
    <Grid>
        <ScrollViewer x:Name="ScrollViewer" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      PreviewMouseLeftButtonDown="OnPanMouseDown"
                      PreviewMouseMove="OnPanMouseMove"
                      PreviewMouseLeftButtonUp="OnPanMouseUp">
            <Image x:Name="BoardImage" 
                   Stretch="None"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                   MouseLeftButtonDown="OnCellClick">
                <Image.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ZoomLevel, Mode=OneWay}" 
                                    ScaleY="{Binding ZoomLevel, Mode=OneWay}" />
                </Image.LayoutTransform>
            </Image>
        </ScrollViewer>
    </Grid>
</UserControl>