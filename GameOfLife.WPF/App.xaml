<Application x:Class="GameOfLife.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:GameOfLife.WPF.Converters"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                <ResourceDictionary Source="Resources/Templates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:CellStateToBrushConverter x:Key="CellStateToBrushConverter"/>
            <converters:MultiplyConverter x:Key="MultiplyConverter"/>
            <converters:MultiBooleanToBooleanConverter x:Key="MultiBooleanToBooleanConverter"/>
            <converters:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>